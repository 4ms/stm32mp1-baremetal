/* NO MORE USE SCMI SUPPORT for BASIC boot chain */
#ifndef CONFIG_STM32MP1_TRUSTED

#include "stm32mp15-no-scmi.dtsi"

/ {
	clocks {
		u-boot,dm-pre-reloc;

		clk_hse: clk-hse {
			u-boot,dm-pre-reloc;
		};

		clk_hsi: clk-hsi {
			u-boot,dm-pre-reloc;
		};

		clk_lse: clk-lse {
			u-boot,dm-pre-reloc;
		};

		clk_lsi: clk-lsi {
			u-boot,dm-pre-reloc;
		};

		clk_csi: clk-csi {
			u-boot,dm-pre-reloc;
		};
	};

	reboot {
		u-boot,dm-pre-reloc;
	};
};

&clk_hse {
	u-boot,dm-pre-reloc;
};

&clk_hsi {
	u-boot,dm-pre-reloc;
};

&clk_lse {
	u-boot,dm-pre-reloc;
};

&clk_lsi {
	u-boot,dm-pre-reloc;
};

&clk_csi {
	u-boot,dm-pre-reloc;
};

&cpu0_opp_table {
	u-boot,dm-spl;
	opp-650000000 {
		u-boot,dm-spl;
	};
	opp-800000000 {
		u-boot,dm-spl;
	};
};
#endif /* CONFIG_STM32MP1_TRUSTED */
